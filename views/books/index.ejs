<h2 class="page-header">Search Books</h2>
<form action="/books" method="GET">
	<div class="form-row">
		<label class="form-item">
			Title <input type="text" name="title" value="<%= searchOptions.title %>"
		/></label>
	</div>
	<div class="form-row">
		<label class="form-item"
			>Published After
			<input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>" />
		</label>
	</div>
	<div class="form-row">
		<label class="form-item"
			>Published Before
			<input
				type="date"
				name="publishedBefore"
				value="<%= searchOptions.publishedBefore %>"
			/>
		</label>
	</div>
	<div class="form-row form-row-end">
		<button class="btn btn-primary" type="submit">Search</button>
	</div>
</form>
<br />
<%- include("../partials/bookGrid", {books, large: true}) %>
