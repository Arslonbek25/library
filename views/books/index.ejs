<h2>Search Books</h2>
<form action="/books" method="GET">
	<div>
		<label>Title <input type="text" name="title" value="<%= searchOptions.title %>" /></label>
	</div>
	<div>
		<label
			>Published After
			<input type="date" name="publishedAfter" value="<%= searchOptions.publishedAfter %>" />
		</label>
		<label
			>Published Before
			<input type="date" name="publishedBefore" value="<%= searchOptions.publishedBefore %>"
		/></label>
	</div>
	<button type="submit">Search</button>
</form>
<div>
	<% books.forEach(book => { %>
	<a href="/books/<%= book.id %>">
		<img src="<%= book.coverImagePath %> " height="150" width="100" />
	</a>
	<% }) %>
</div>
